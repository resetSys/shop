.detial {
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
  box-sizing: content-box;
}
.detial .swiper {
  width: 100vw;
  height: 100vw;
}
.detial .swiper swiper-item {
  width: 100%;
  height: 100%;
}
.detial .swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.detial .price {
  padding: 20rpx;
  color: var(--theme-color);
  font-size: 40rpx;
}
.detial .base-msg {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  padding: 10rpx 0;
  box-sizing: content-box;
}
.detial .base-msg .name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  width: 625rpx;
  height: auto;
  padding: 10rpx;
  line-height: 1.5;
}
.detial .base-msg .collect {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10rpx;
  width: 125rpx;
  border-left: 0.5rpx solid #dcdcdc;
}
.detial .detials {
  display: flex;
  width: 100%;
  padding: 10rpx;
  height: auto;
  flex-direction: column;
}
.detial .detials image {
  width: 100%;
}
.detial .bottom-bar {
  height: 100rpx;
  width: 100%;
  position: fixed;
  display: flex;
  bottom: 0;
}
.detial .bottom-bar .service {
  display: flex;
  flex-grow: 1;
  background-color: #fff;
}
.detial .bottom-bar .service .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.detial .bottom-bar .service .item button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.detial .bottom-bar .service .item view {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.detial .bottom-bar .operation {
  display: flex;
  flex-grow: 1;
}
.detial .bottom-bar .operation view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.detial .bottom-bar .operation .add-cart {
  background-color: #fb970b;
}
.detial .bottom-bar .operation .buy {
  background-color: var(--theme-color);
}
