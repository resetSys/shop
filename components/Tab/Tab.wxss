.tab {
  width: 100%;
  height: 100%;
}
.tab scroll-view{
  width: 100%;
  height: calc(100% - 60rpx);
}
.tab-control {
  display: flex;
}
.tab-control view {
  flex-grow: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  box-sizing: border-box;
}
.tab-content {
  width: 100%;
  padding: 20rpx 0;
}
.content-item {
  height: 250rpx;
  width: 100%;
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid var(--theme-color);
}
.content-item>image {
  flex-grow: 1;
  width: 100%;
  height: 100%;
}
.content-item>view {
  flex-grow: 2;
  height: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item-title{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.item-price{
  color: var(--theme-color);
}
.active {
  border-bottom: 3rpx solid var(--theme-color);
}
