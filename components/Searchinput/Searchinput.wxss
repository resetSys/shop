.search {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--theme-color);
}
.search input {
  width: calc(100% - 20rpx);
  height: 70rpx;
  background-color: #fff;
  text-align: center;
  border-radius: 5rpx;
  font-size: 30rpx;
}
